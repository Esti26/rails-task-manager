<h1>My tasks</h1>
<% @tasks.each do |task| %>

<li>
    <%= check_box_tag :completed%>
    <%= link_to "#{task.title}", show_path(task.id)%>

    <%= link_to "delete", destroy_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
      <i class="fa fa-trash fa-2x"></i>
  <% end %>
</li>


<p><%= link_to "Add new task", create_path%></p>
